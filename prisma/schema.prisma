// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]
  credits       Int       @default(10)
  audioProjects AudioProject[]
  uploadedVoices UploadedVoice[]
  apiKeys       ApiKey[]
  // API metering fields
  monthlyPlays        Int       @default(0)
  monthlyPlaysReset   DateTime?
  publicAssetsLimit   Int       @default(3)   // Free tier: 3 public slugs
  monthlyPlaysLimit   Int       @default(100) // Free tier: 100 plays/mo

  @@unique([email])
  @@map("user")
}

model AudioProject {
  id            String   @id @default(cuid())
  name          String?
  text          String
  audioUrl      String
  s3Key         String
  language      String
  voiceS3Key    String
  exaggeration  Float    @default(0.5)
  cfgWeight     Float    @default(0.5)
  userId        String
  // Provider field - defaults to chatterbox (only supported provider)
  provider      String   @default("chatterbox")
  voiceId       String?  // Legacy field - not used for Chatterbox
  voiceConfig   Json?    // Legacy field - not used for Chatterbox
  exportCount   Int      @default(0)
  lastExportedAt DateTime?
  // Filter dimensions
  tags          String[] @default([])
  type          String?  // "ivr", "greeting", "announcement", "promo"
  function      String?  // "on-hold", "voicemail", "menu-prompt"
  department    String?  // "sales", "support", "hr", "marketing"
  status        String   @default("active") // "draft", "active", "archived"
  duration      Float?   // seconds
  // Public sharing / API access (for Phase 5)
  isPublic           Boolean  @default(false)
  publicSlug         String?  @unique
  publicUrl          String?
  accessCount        Int      @default(0)
  lastAccessed       DateTime?
  monthlyAccessCount Int      @default(0)
  lastAccessReset    DateTime?
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("audio_project")
}

model UploadedVoice {
  id        String   @id @default(cuid())
  name      String
  s3Key     String
  url       String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("uploaded_voice")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model ApiKey {
  id          String   @id @default(cuid())
  name        String   // "Production", "Development", etc.
  key         String   @unique // The actual key (hashed)
  keyPreview  String   // Last 4 chars for display: "...abc123"
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lastUsedAt  DateTime?
  expiresAt   DateTime?
  createdAt   DateTime @default(now())

  @@map("api_key")
}
